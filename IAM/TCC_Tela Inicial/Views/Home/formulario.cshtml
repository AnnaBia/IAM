@page
@model TCC_Tela_Inicial.Views.Quero_reservar.formularioModel
@{
    ViewBag.Title = "Formulário";
}
<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-10 fundo-formulario">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="row">
                        <div class="col-md-12">
                            <h5>Dados reserva</h5>
                        </div>
                    </div>
                    <div class="row justify-content-center">
                        <div class="col-md-10">
                            <select class="form-control" type="text" aria-label="default input example">
                                <option selected>Unidade</option>
                                <option>Rua Jacuna, 339 - Vila Guilherme, São Paulo - SP, 02068-010</option>
                                <option>Rua Coronel Morais, 396 - Pari, São Paulo - SP, 03029-000</option>
                            </select>
                        </div>
                    </div>
                    <div class="row justify-content-center">
                        <div class="col-md-5">
                            <input class="form-control" type="date" placeholder="Data" aria-label="default input example">
                        </div>
                        <div class="col-md-5">
                            <select class="form-control" type="text" placeholder="Hora" aria-label="default input example">
                                <option selected>Hora</option>
                                <option>...</option>
                                <option>...</option>
                            </select>
                        </div>
                    </div>
                    <div class="row justify-content-center">
                        <div class="col-md-10">
                            <input class="form-control" type="number" placeholder="Pessoas" aria-label="default input example">
                        </div>
                    </div>
                    <div class="row justify-content-center">
                        <div class="col-md-10">
                            <textarea class="form-control" placeholder="Informações adicionais" rows="3"></textarea>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="row">
                        <div class="col-md-12">
                            <h5>Dados pessoais</h5>
                        </div>
                    </div>
                    <div class="divisoria">
                        <div class="row justify-content-center">
                            <div class="col-md-10">
                                <input class="form-control" type="text" placeholder="Nome completo" aria-label="default input example">
                            </div>
                        </div>
                        <div class="row justify-content-center">
                            <div class="col-md-10">
                                <input class="form-control" type="email" placeholder="E-mail" aria-label="default input example">
                            </div>
                        </div>
                        <div class="row justify-content-center">
                            <div class="col-md-10">
                                <input class="form-control" type="text" placeholder="Telefone" aria-label="default input example">
                            </div>
                        </div>
                        <div class="row justify-content-center mt-5">
                            <div class="col-md-10">
                                <button type="button" class="btn-continuar">Continuar ></button>
                                <button type="button" id="btn-limpar">Limpar</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
